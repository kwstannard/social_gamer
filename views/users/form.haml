%form{ action: '/register', method: 'post' }
  %label.span1 Email
  %input.span2.form_input{ type: "email", name: :email}
  %label.span1 Password
  %input.span2.form_input{ type: "password", name: :password}
  %label.span1 Confirm Password
  %input.span2.form_input{ type: "password_confirmation", name: :password_confirmation}
  %input.btn{ name: "submit", type: "submit", value: "Register" }
